{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
      "components/*": ["components/*"]
    },
    "declaration": true, // 型定義ファイルを生成
    "declarationDir": "./dist", // 型定義ファイルの出力先
    "emitDeclarationOnly": true, // 型定義ファイルのみを生成
    "outDir": "./dist", // 出力先ディレクトリ
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "storybook-static", "dist"]
}
